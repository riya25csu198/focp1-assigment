#include<stdio.h>
int main(){    
   int n, index, value;
    printf("enter number of elements in array: ");
    scanf("%d", &n);

    int arr[100]; 

    printf("enter %d elements:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("enter value: ");
    scanf("%d", &value);

    printf("enter position (0 = front, %d = end, or any index): ", n);
    scanf("%d", &index);

    printf("array before insertion:\n");
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    for(int i = n; i > index; i--) {
        arr[i] = arr[i - 1];
    }

    arr[index] = value;
    n++;

    printf("array after insertion:\n");
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    return 0;
}
