#include<stdio.h>
int main(){    
   int n, index;
    printf("enter number of elements: ");
    scanf("%d", &n);

    int arr[100]; 

    printf("enter %d elements:\n", n);
    for(int i=0; i<n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("position of number to delete: ", n);
    scanf("%d", &index);

    printf("array before Deletion:\n");
    for(int i=0; i<n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    for(int i=index; i<n; i++) {
        arr[i]=arr[i+1];
    }n--;
    
    printf("array after deletion:\n");
    for(int i=0; i<n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    return 0;
}
